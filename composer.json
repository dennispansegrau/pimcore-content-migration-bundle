{
    "name": "dennispansegrau/pimcore-content-migration-bundle",
    "description": "A Pimcore bundle that generates Doctrine-like migrations for Documents, Assets, and Data Objects â€” allowing developers to export Pimcore content structures as executable migration scripts to fully rebuild environments from scratch.",
    "type": "pimcore-bundle",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "PimcoreContentMigration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PimcoreContentMigration\\Tests\\Unit\\": "tests/Unit/",
            "PimcoreContentMigration\\Tests\\Integration\\": "tests/Integration/"
        }
    },
    "authors": [
        {
            "name": "Dennis Pansegrau",
            "email": "dennis@pansegrau.biz"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "pimcore": {
            "bundles": [
                "PimcoreContentMigration\\PimcoreContentMigrationBundle"
            ]
        }
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^10.0"
    },
  "scripts": {
    "phpstan": "php -d memory_limit=1G vendor/bin/phpstan analyse",
    "cs": "php-cs-fixer check --config=.php-cs-fixer.php",
    "csfix": "php-cs-fixer fix --config=.php-cs-fixer.php --verbose",
    "test": "php vendor/bin/phpunit --no-coverage",
    "coverage": "phpunit"
  }
}
